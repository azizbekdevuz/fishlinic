// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?  // Hashed password (nullable for OAuth users)
  name      String?
  avatarUrl String?  // Profile picture URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Verification fields
  verifiedAt      DateTime?
  verificationToken String?  @unique
  verificationTokenExpiresAt DateTime?

  // Relations
  telemetry Telemetry[]
  verificationAttempts VerificationAttempt[]
  feederSchedules FeederSchedule[]
  feedLogs FeedLog[]

  @@map("users")
}

model VerificationAttempt {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([expiresAt])
  @@map("verification_attempts")
}

model Telemetry {
  id         String   @id @default(cuid())
  timestamp  DateTime @default(now())
  
  // Core measurements
  pH         Float
  temp_c     Float?
  do_mg_l    Float
  
  // Optional fields
  fish_health Float?
  
  // AI-enriched fields
  quality_ai Float?   // 1-10 score predicted by AI
  status_ai  String?  // good|average|alert
  
  // Relations
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([timestamp])
  @@index([userId])
  @@map("telemetry")
}

model Chat_History {
  id        Int    @id @default(autoincrement())
  device_id String
  message   String // JSON string containing chat messages
  
  @@map("chat_history")
}

model FeederSchedule {
  id        String   @id @default(uuid())
  name      String?  // Optional name like "Morning", "Evening"
  hour      Int      // 0-23
  minute    Int      // 0-59
  duration  Float    @default(2.0) // Duration in seconds for servo oscillation
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // User relation - schedules belong to a user
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([hour, minute])
  @@index([userId])
  @@map("feeder_schedules")
}

model FeedLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  source    String   // "manual", "scheduler", "api"
  duration  Float?   // Duration in seconds
  success   Boolean
  message   String?  // Error message if failed
  
  // User relation - feed logs belong to a user
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([timestamp])
  @@index([userId])
  @@map("feed_logs")
}