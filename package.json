{
  "name": "fishlinic",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:ui": "next dev -p 3000",
    "dev:bridge": "tsx mock-server/index.ts",
    "dev": "run-p dev:*",
    "build": "next build",
    "build:production": "cross-env NODE_ENV=production next build",
    "start": "next start",
    "start:prod:all": "run-p start:ui:prod start:mock:prod",
    "start:ui:prod": "cross-env NODE_ENV=production next start -p 3000",
    "start:mock:prod": "cd mock-server && npm run start:prod",
    "start:mock:dev": "tsx mock-server/index.ts",
    "start:mock": "cd mock-server && npm start",
    "start:core": "run-p start:ui:prod start:mock:dev",
    "exhibition": "npm run build:production && npm run start:core",
    "lint": "eslint"
  },
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "@tailwindcss/postcss": "^4.1.16",
    "dotenv": "^17.2.2",
    "echarts": "^5.5.0",
    "echarts-for-react": "^3.0.2",
    "express": "^5.1.0",
    "lucide-react": "^0.548.0",
    "next": "15.5.3",
    "next-auth": "^4.24.13",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "serialport": "^13.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/express": "^5.0.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5"
  }
}
